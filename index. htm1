        input { width: 100%; height: 60px; background: none; border: none; color: white; text-align: right; font-size: 32px; margin-bottom: 20px; padding: 10px; box-sizing: border-box; }
        .buttons { display: grid; grid-template-columns: repeat(4, 1fr); gap: 10px; }
        button { padding: 20px; font-size: 20px; border: none; border-radius: 10px; cursor: pointer; background: #333; color: white; transition: 0.3s; }
